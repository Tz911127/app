.nav {
  display: flex;
  background: #fff;
  margin-top: 10rpx;
  padding-left: 30rpx;
  padding-right: 30rpx;
}

.img {
  flex: 10%;
}

.img image {
  width: 150rpx;
  height: 150rpx;
}

.test {
  flex: 45%;
}

.test .tit {
  font-size: 30rpx;
}

.test text {
  font-size: 27rpx;
}

.num {
  /* flex: 45%; *//* float: right; */
  text-align: right;
  font-size: 35rpx;
  color: #98a0b3;
  margin: 15rpx 0
}

.main {
  background: #fff;
  padding-bottom: 27rpx;
  margin-bottom: 10rpx;
}

.btn_ {
  display: inline-block;
  text-align: center;
  justify-content: center;
  width: 45%;
  margin: 0 10rpx;
}

.page-tab .btn {
  width: 30%;
  display: inline-block;
  margin-right: 10rpx;
}

.page-tab .tab {
  margin: 30rpx;
}

.page-tab .tab view {
  font-size: 30rpx;
  font-family: 400;
}

.page-tab .tab button {
  font-size: 25rpx;
  padding: 0 8rpx;
}

.turn {
  border-top: 1px solid rgba(242, 242, 242, 1);
  border-bottom: 1px solid rgba(242, 242, 242, 1);
  margin: 60rpx 0;
  padding: 25rpx 0;
}

.turn image {
  width: 8rpx;
  height: 14rpx;
}

.ok_off {
  display: flex;
  flex-direction: row;
  margin-top: 50rpx;
}

.ok_off button {
  width: 45%;
}

.foot {
  border-top: 1px solid rgba(242, 242, 242, 1);
  display: flex;
  margin: 20rpx;
  padding-top: 25rpx;
}

.foot view {
  width: 50%;
  font-size: 25rpx;
  color: #096DD9;
  text-align: center
}

.sear {
  position: fixed;
  width: 100%;
  z-index: 333;
  background: #fff;
  padding-bottom: 15rpx;
  padding-left: 20rpx;
}

.btn {
  display: inline-block;
  border: 1px solid rgba(228, 228, 228, 1);
  border-radius: 57rpx;
  width: 83%;
  background-color: rgba(242, 242, 242, 1);
  height: 70rpx;
}

.sea {
  display: inline-block;
  margin-left: 30rpx;
}

.sea image {
  width: 50rpx;
  height: 56rpx;
}

.btn image {
  width: 60rpx;
  height: 60rpx;
  margin-left: 20rpx;
}

.btn input {
  display: inline-block;
  width: 75%;
}

.title {
  width: 100%;
  /* padding-left: 35rpx; */
  padding: 20rpx 35rpx;
  border-bottom: 1px solid rgba(228, 228, 228, 1);
}

.title view {
  font-size: 35rpx;
  display: inline-block;
}

.title view:nth-child(1) {
  color: #2b344a;
  width: 25%;
}

.title view:nth-child(2) {
  color: #98a0b3;
  text-align: right;
  width: 65%;
}
