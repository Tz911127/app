@import "../../lib/lib.wxss";

.page-section-gap {
  box-sizing: border-box;
}

.page-body-button {
  margin-bottom: 30rpx;
}

.sea {
  /* position: fixed; */
  z-index: 2;
  background: #fff;
  /* margin-top: 15rpx; */
  width: 100%;
  display: flex;
  padding-bottom: 14rpx;
  /* border-bottom: 1px solid #e5e5e5 */
}

.sea image {
  width: 48rpx;
  height: 48rpx;
  padding-left: 30rpx;
  padding-right: 30rpx;
  margin-top: 7rpx;
}

.btn {
  display: inline-block;
  border-radius: 57rpx;
  width: 83%;
  background-color: #f5f7f8;
  height: 60rpx;
}

.scroll-view_H {
  white-space: nowrap;
}

.btns {
  display: flex;
  z-index: 3;
  position: fixed;
  top: 75rpx;
  width: 98%;
}

.btns button {
  display: inline-block;
  flex-direction: row;
  width: 45%;
  font-size: 27rpx;
  margin: 10rpx;
}

.btn image {
  width: 44rpx;
  height: 44rpx;
  margin-right: -20rpx;
  margin-top: 10rpx;
}

.btn input {
  display: inline-block;
  position: absolute;
  top:10rpx;
  font-size: 32rpx;
}

.btn_ok, .btn_offline, .btn_error, .btn_out {
  display: inline-block;
  width: 330rpx;
  height: 180rpx;
  position: relative;
  color: #fff;
  margin-right: -10rpx
}

.btns image {
  width: 330rpx;
  height: 180rpx;
}

.btn_ok text:nth-child(2), .btn_offline text:nth-child(2),
.btn_error text:nth-child(2), .btn_out text:nth-child(2) {
  position: absolute;
  top: 24rpx;
  left: 30rpx;
  font-size: 32rpx
}

.btn_ok text:nth-child(3), .btn_offline text:nth-child(3),
.btn_error text:nth-child(3), .btn_out text:nth-child(3) {
  position: absolute;
  top: 90rpx;
  left: 30rpx;
}
