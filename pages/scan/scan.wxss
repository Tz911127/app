/* pages/open_close/open_close.wxss */

.time {
  background-color: #f5f7f8;
  position: fixed;
  width: 100%;
  height: 100%;
  font-size: 28rpx;
}

.time image {
  width: 60rpx;
  height: 60rpx;
}

.scan {
  text-align: center;
  margin-top: 100rpx;
  margin-bottom: 100rpx
}

.timeView {
  background-color: #fff;
  padding: 24rpx;
  display: flex;
  margin-top: 5rpx;
  margin-bottom: -1rpx;
  color: #2B344A;
  padding-left: 24rpx
}

.open {
  flex-direction: row;
  width: 30%;
}
.closeTime {
  width: 100%
}

.close {
  flex-direction: row;
  line-height: 52rpx;
  width: 30%;
}


button {
   margin: 50rpx 20rpx 0 20rpx;
  background: linear-gradient(to bottom right, #40a9ff, #096dd9);
  color: #fff;
}

 button::after {
  border: none;
}

.btn {
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
  float: left;
  width: 80%;
  font-size: 28rpx;
}
.change {
  float: right;
  font-size: 28rpx;
  padding: 3rpx 20rpx;
  border-radius: 6rpx;
  color: #096dd9;
  /* margin-top: -20rpx; */
  background: #fff;
  border: 1px solid #096DD9
}