@import "../../lib/lib.wxss";
page {
  background-color: #f5f7f8;
}

/* pages/open_close/open_close.wxss */

.time {
  background-color: #f5f7f8;
  position: fixed;
  width: 100%;
  height: 100%;
  font-size: 28rpx;
}

.time image {
  width: 60rpx;
  height: 60rpx;
}

.scan {
  text-align: center;
  margin-top: 100rpx;
  margin-bottom: 100rpx
}

.timeView {
  background-color: #fff;
  padding: 24rpx;
  display: flex;
  margin-top: 5rpx;
  margin-bottom: -1rpx;
  color: #2B344A;
  padding-left: 24rpx
}

.open {
  flex-direction: row;
  width: 30%;
}
.closeTime {
  width: 100%
}

.close {
  flex-direction: row;
  line-height: 52rpx;
  width: 30%;
}


button {
   margin: 50rpx 20rpx 0 20rpx;
  background: linear-gradient(to bottom right, #40a9ff, #096dd9);
  color: #fff;
}

 button::after {
  border: none;
}

.btn {
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
  float: left;
  width: 80%;
  font-size: 28rpx;
}
.change {
  float: right;
  font-size: 28rpx;
  padding: 3rpx 20rpx;
  border-radius: 6rpx;
  color: #096dd9;
  /* margin-top: -20rpx; */
  background: #fff;
  border: 1px solid #096DD9
}



.camera_pic, .media_dec {
  /* background: #fff; */
  padding: 20rpx 30rpx;
}
.camera_pic text {
  float: right;
  color: rgba(64, 169, 255, 1)
}
.weui-cells {
  padding: 10rpx 0
}
.picSrc {
  width: 100%!important;
  height: 100%!important
}

.page-body-info {
  display: flex;
  box-sizing: border-box;
  padding: 30rpx;
  height: 350rpx;
  /* border-top: 1rpx solid #d9d9d9; *//* border-bottom: 1rpx solid #d9d9d9; */
  background: #fff;
  align-items: center;
  justify-content: center;
}

.image-plus {
  width: 150rpx;
  height: 150rpx;
  border: 2rpx solid #d9d9d9;
  position: relative;
}

.image-plus-nb {
  /* border: 0; */
  margin: 0 10rpx;
  width: 25%;
  display: flex;
  justify-content: center;
  align-items: center
}

.image-plus-horizontal {
  position: absolute;
  top: 50%;
  left: 50%;
  background-color: #d9d9d9;
  width: 4rpx;
  height: 80rpx;
  transform: translate(-50%, -50%);
}

.image-plus-vertical {
  position: absolute;
  top: 50%;
  left: 50%;
  background-color: #d9d9d9;
  width: 80rpx;
  height: 4rpx;
  transform: translate(-50%, -50%);
}

.image-plus-text {
  /* width: 100%; */
  color: #888;
  font-size: 28rpx;
}