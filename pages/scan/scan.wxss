/* pages/open_close/open_close.wxss */

.time {
  background-color: rgba(242, 242, 242, 1);
  position: fixed;
  width: 100%;
  height: 100%;
}

.time image {
  width: 100rpx;
  height: 100rpx;
}

.scan {
  text-align: center;
  margin-top: 40rpx;
}

.timeView {
  background-color: #fff;
  padding: 10rpx;
  display: flex;
  margin-top: 5rpx;
  margin-bottom: 5rpx;
}

.open {
  flex-direction: row;
  width: 30%;
}

.close {
  flex-direction: row;
  width: 30%;
}

button {
  margin: 50rpx 20rpx 0 20rpx;
}

.btn {
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
  float: left;
  width: 80%;
}
