@import "../../lib/lib.wxss";

.page {
  background-color: #f5f7fb;
  position: fixed;
  font-size: 28rpx;
  width: 100%;
  height: 100%;
}

.checkbox {
  background: #fff;
  padding: 20rpx;
}

label {
  width: 20%;
  display: inline-block;
  border-radius: 15rpx;
  margin: 10rpx 15rpx;
}

button {
  margin: 50rpx 20rpx 0 20rpx;
  background: linear-gradient(to bottom right, #40a9ff, #096dd9);
  color: #fff;
}

button::after {
  border: none;
}
checkbox .wx-checkbox-input {
  border-radius: 50%;
}

checkbox .wx-checkbox-input.wx-checkbox-input-checked::before {
  height: 65rpx;
  width: 65rpx;
  line-height: 65rpx;
  text-align: center;
  background-color: #096dd9;
  /* border: 1rpx solid #096dd9; */
  border-radius: 50%;
  color: #fff;
  /* 自定义样式.... */
}