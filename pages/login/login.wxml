<!--pages/login/login.wxml-->

<view style='text-align:center;margin-top:70rpx'>
  <image style='width:180rpx;height:120rpx' src='../../img/loginIcon.png'></image>
</view>
<view class='title'>智能营销传播系统</view>


<form bindsubmit="formSubmit">
  <view class="page-section">
    <view class="weui-cells weui-cells_after-title">
      <view class="weui-cell weui-cell_input">
        <image src='../../img/company.png'></image>
        <input class="weui-input" style='width:100%' name="code" placeholder="公司代码" value='{{domain}}' />
      </view>
    </view>
  </view>
  <view class="page-section">
    <view class="weui-cells weui-cells_after-title">
      <view class="weui-cell weui-cell_input">
        <image src='../../img/account.png'></image>
        <input class="weui-input" name="no" style='width:100%' placeholder="账号" value='{{account}}' />
      </view>
    </view>
  </view>
  <view class="page-section">
    <view class="weui-cells weui-cells_after-title">
      <view class="weui-cell weui-cell_input">
        <image src='../../img/pwd.png'></image>
        <input class="weui-input" password name="pwd" style='width:100%' value='{{password}}' placeholder="密码" />
      </view>
    </view>
  </view>

  <view class='btn-area'>
    <button form-type='submit'>登录</button>
  </view>
</form>