  background-color: #fff;
  padding: 10rpx;
  display: flex;
  margin-top: 5rpx;
  margin-bottom: 5rpx
}

.open {
  flex-direction: row;
  width: 30%;
  font-size: 28rpx;
  padding-left: 30rpx;
  color: #2B344A;
}
.openTime {
  font-size: 28rpx
}
