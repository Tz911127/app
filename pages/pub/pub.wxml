<view class='time'>
  <view>
    <text>节目名称:</text>
    <text>春天来了</text>
  </view>
  <view>
    <text>节目分辨率:</text>
    <text>1920*1080</text>
  </view>


  <view class="weui-cells weui-cells_after-title">
    <view class="weui-cell weui-cell_input">
      <view class="weui-cell__hd">
        <view class="weui-label">开始日期</view>
      </view>
      <view class="weui-cell__bd">
        <picker mode="date" value="{{startDate}}"bindchange="bindStartDate">
          <view class="weui-input">{{startDate}}</view>
        </picker>
      </view>
    </view>
  </view>


   <view class="weui-cells weui-cells_after-title">
    <view class="weui-cell weui-cell_input">
      <view class="weui-cell__hd">
        <view class="weui-label">结束日期</view>
      </view>
      <view class="weui-cell__bd">
        <picker mode="date" value="{{endDate}}" bindchange="bindEndDate">
          <view class="weui-input">{{endDate}}</view>
        </picker>
      </view>
    </view>
  </view>


 
  <view style='float:right;font-size:25rpx' bindtap='setTime'>添加时段</view>
  <button type="primary">下一步，选择终端</button>
</view>