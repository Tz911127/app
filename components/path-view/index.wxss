/* components/path-view/path-view.wxss */
.path {
  display: flex;
  padding: 0 0 0 10px;
}
.path {
  min-height: 30px;

  flex-wrap: wrap;
}
.path .btn {
  margin-right: 20px;
  margin-bottom: 10px;
  padding: 0 5px;
  height: 20px;
  border-radius: 2px;
  background: #fff;
  color: rgba(9, 109, 217, 1);
  font-size: 28rpx;
  line-height: 20px;
}
.list-view {
  width: 100%;
}
.list-view-item {
  position: relative;
  display: flex;
  flex-direction: row;
  box-sizing: border-box;
  margin-top: -1px;
  width: 100%;
  height: 40px;
  border-bottom: 1px solid #e5e5e5;
  border-radius: 3px;
}
.list-view-item .title {
  padding-left: 20rpx;
  font-size: 14px;
  line-height: 40px;
}
.list-view-item .tip {
  font-size: 10px;
  line-height: 40px;
}
.list-view-item .btn {
  /* position: absolute; */
  top: 7px;
  /* right: 20rpx; */
  padding: 0 5px 0 15px;
  height: 75rpx;
  border-radius: 3px;
  /* background: #4b0; */
  color: #98A0B3;
  font-size: 14px;
  line-height: 75rpx;
}
.next {
position: absolute;
top: 7px;
right: 20rpx;
 color: #98A0B3;
}
